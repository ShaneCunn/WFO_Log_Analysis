<Window  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Properties="clr-namespace:WFO_PROJECT.Properties" x:Name="WFO_Grep_Tool" x:Class="WFO_PROJECT.MainWindow"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="MainWindow" Height="640" Width="900" Icon="Icon.ico" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Top" Margin="0" Height="21">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF6F6F6" Offset="0.25"/>
                    <GradientStop Color="#FFEAE8E8" Offset="0.25"/>
                    <GradientStop Color="#FFDCD9D9" Offset="0.8"/>
                    <GradientStop Color="#FFFFFCFC" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>

            <MenuItem x:Name="Btn_file_tab" Header="File&#xD;&#xA;" Click="MenuItem_exitBtn">
                <MenuItem x:Name="Btn_New_Window" Header="New Window" HorizontalAlignment="Left" Width="169" Margin="0,0,-29,0" ToolTip="Open a new window"/>
                <MenuItem Header="Select Search Path" HorizontalAlignment="Left" Width="162" Margin="0,0,-22,0"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="157" Margin="0,0,-17,0"/>
                <MenuItem x:Name="exitBtn" Header="Exit" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Options" HorizontalAlignment="Left" Width="160" Click="MenuItem_Click"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="View Help" HorizontalAlignment="Left" Width="160"/>
                <Separator HorizontalAlignment="Left" Width="160"/>
                <MenuItem Header="About" HorizontalAlignment="Left" Width="160"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
        </Menu>
        <Rectangle Fill="#FFBC0000" HorizontalAlignment="Left" Margin="0,640,0,0" Stroke="Black" VerticalAlignment="Top" Height="1" Width="1"/>
        <Image HorizontalAlignment="Left" Height="36" Margin="425,49,0,0" VerticalAlignment="Top" Width="130"/>
        <TabControl Margin="0,21,0,0">
            <TabItem Header="Log Creation" ToolTip="Select a log to parse">
                <Grid Background="#FFE5E5E5" Margin="0,-8.505,-6,-9.152">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>
                    <GroupBox Header="GroupBox" HorizontalAlignment="Left" Height="203.946" Margin="12.523,1.05,0,0" VerticalAlignment="Top" Width="267.427"/>
                    <ListView x:Name="ListView1" Margin="9.95,348.072,0,49.703" Loaded="ListView1_Loaded" HorizontalAlignment="Left" Width="272.573" SelectionChanged="ListView1_SelectionChanged_2" IsEnabled="False">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="GrepButton" Content="Run" HorizontalAlignment="Left" Margin="107.523,0,0,12.743" VerticalAlignment="Bottom" Width="85" RenderTransformOrigin="-0.107,0.227" Click="GrepButton_Click" ToolTip="Click to run a search on a log file"/>
                    <!--<Label Content="Start time" HorizontalAlignment="Left" Margin="32,137,0,0" VerticalAlignment="Top"/>
                    <Label Content="End time" HorizontalAlignment="Left" Margin="25,168,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.561,4.885"/>-->
                    <Button Content="Choose" HorizontalAlignment="Left" Margin="29.56,174.05,0,0" VerticalAlignment="Top" Width="79.037" Click="Button_Click_4" ToolTip="Select output folder." RenderTransformOrigin="1.231,0.273"/>
                    <Label x:Name="outputFileLabel" Content="" HorizontalAlignment="Left" Margin="32.144,146.165,0,0" VerticalAlignment="Top" Width="233.673" Height="26" RenderTransformOrigin="0.5,0.5" BorderThickness="2">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="0.024"/>
                                <RotateTransform Angle="-0.038"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>
                    <Label Content="Source Log file:&#xA;" HorizontalAlignment="Left" Margin="26.379,27.05,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.237,0.308" Width="95.676" Height="26"/>
                    <Button x:Name="BtnCancel" Content="Stop" HorizontalAlignment="Left" Margin="207.523,0,0,12.743" VerticalAlignment="Bottom" Width="75" IsCancel="True" IsEnabled="False"/>
                    <GroupBox x:Name="Time_picker_group" Header="Pick time range" HorizontalAlignment="Left" Margin="12.523,214.112,0,0" VerticalAlignment="Top" Height="98" Width="270">
                        <Grid Margin="10,10,13,5">
                            <xctk:DateTimePicker x:Name="End_time" RenderTransformOrigin="3.596,8.75" Margin="58,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" ToolTip="Pick a end time" IsReadOnly="True"/>
                            <xctk:DateTimePicker x:Name="Start_Time_" RenderTransformOrigin="3.596,8.75" Margin="58,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" ToolTip="Pick a start time" IsReadOnly="True"/>
                            <Label Content="Start time:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-7,-1,0,0"/>
                            <Label Content="End time:" HorizontalAlignment="Left" Margin="-7,30,0,0" VerticalAlignment="Top"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="Add_new_Line_Groupbox" Header="Add new line " Margin="301,85,15,0" VerticalAlignment="Top" Height="167.943">
                        <Button x:Name="btn_Save_New_Line" Content="Save" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Width="96" RenderTransformOrigin="0.583,2.615"/>
                    </GroupBox>
                    <DataGrid x:Name="dataGridView1" Margin="301.499,292.021,13.501,54.417" HorizontalGridLinesBrush="#FFAC0E0E" VerticalGridLinesBrush="#FF201C3C" 
                    	AreRowDetailsFrozen="True" IsReadOnly="True" RenderTransformOrigin="0.5,0.5" SelectionChanged="dataGridView1_SelectionChanged" >
                        <DataGrid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="-0.016"/>
                                <RotateTransform Angle="0.103"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </DataGrid.RenderTransform>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn  Width="60" Binding.XmlNamespaceManager="{Binding checkstuff}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox x:Name="null" Checked="CheckBox_Click" IsEnabled="True"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Save Script" HorizontalAlignment="Left" Margin="305,0,0,12.703" VerticalAlignment="Bottom" Width="76" Click="save_Script" RenderTransformOrigin="0.184,0.591" Height="25.44"/>
                    <Button Content="Copy Script" HorizontalAlignment="Left" Margin="395,0,0,12.703" VerticalAlignment="Bottom" Width="76" IsEnabled="False" RenderTransformOrigin="-0.078,0.649" Height="25.44"/>
                    <GroupBox Header="Create Script&#xA;" Margin="301,15,15,0" VerticalAlignment="Top" Height="60">
                        <Button x:Name="scriptCreationButton" Content="Create Script" HorizontalAlignment="Left" Margin="187,0,0,0" VerticalAlignment="Top" Width="76" Click="Create_File" IsEnabled="False" ToolTip="Save Script"/>
                    </GroupBox>
                    <TextBox x:Name="scriptNamebox" Height="22" Margin="333,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly = "True" IsEnabled="False" TextChanged="Script_Name_TextChanged" Width="152" HorizontalAlignment="Left"/>
                    <TextBox x:Name="Add_New_Line_Textbox__2" HorizontalAlignment="Left" Height="23" Margin="321.243,189.046,0,0" TextWrapping="Wrap" Text="TextBox2" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.443,0.217"/>
                    <TextBox x:Name="Add_New_Line_Textbox__3" HorizontalAlignment="Left" Height="23" Margin="401,189.046,0,0" TextWrapping="Wrap" Text="TextBox3" VerticalAlignment="Top" Width="70"/>
                    <TextBox x:Name="Add_New_Line_Textbox_1" HorizontalAlignment="Left" Height="23" Margin="320,136.96,0,0" TextWrapping="Wrap" Text="Main string" VerticalAlignment="Top" Width="543"/>
                    <ComboBox x:Name="ComboOne" Margin="619,45,0,0" VerticalAlignment="Top" Loaded="ComboBox_Loaded" SelectionChanged="ComboBox_SelectionChanged" PreviewMouseLeftButtonDown="ComboOne_PreviewMouseLeftButtonDown" Height="22" Width="120" HorizontalAlignment="Left" ToolTip="Select script to edit"/>
                    <Button x:Name="Btn_Delete_Script" Content="Remove Script" HorizontalAlignment="Left" Margin="12.523,0,0,12.743" VerticalAlignment="Bottom" Width="85" Click="Btn_Delete_Script_Click"/>
                    <Label Content="Lines in script&#xA;" HorizontalAlignment="Left" Margin="301,257.943,0,0" VerticalAlignment="Top" Width="90.243" Height="26.052"/>
                    <Button Content="Add" HorizontalAlignment="Left" Margin="29.56,82.98,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" Height="22" ToolTip="Browse for a Log file to parse" RenderTransformOrigin="7,2.091"/>
                    <Label x:Name="File_Label" Content="" HorizontalAlignment="Left" Margin="30.687,51.062,0,0" VerticalAlignment="Top" Width="235.77" RenderTransformOrigin="0.5,0.5" Height="26" BorderThickness="3">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="0.42"/>
                                <RotateTransform Angle="0.166"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>
                    <Label Content="Output Folder:" HorizontalAlignment="Left" Margin="29.56,115,0,0" VerticalAlignment="Top" Width="92.495"/>
                    <Label Content="Select script to parse with:" HorizontalAlignment="Left" Margin="12.523,317.112,0,0" VerticalAlignment="Top" Width="150"/>
                    <Label Content="Main String" HorizontalAlignment="Left" Margin="320,106,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.519,0.445"/>
                    <Label Content="To be changed" HorizontalAlignment="Left" Margin="320,164.96,0,0" VerticalAlignment="Top" Width="96"/>
                    <!--<xctk:DateTimePicker x:Name="Start_Time_" RenderTransformOrigin="3.596,8.75" Margin="0,0,157,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="93" ToolTip="Pick a start time"/>
                    <xctk:DateTimePicker x:Name="End_time" RenderTransformOrigin="3.596,8.75" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="93" ToolTip="Pick a end time"/>-->

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>

</Window>