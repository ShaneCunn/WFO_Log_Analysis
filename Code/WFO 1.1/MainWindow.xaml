<Window  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Properties="clr-namespace:WFO_PROJECT.Properties" x:Name="WFO_Grep_Tool" x:Class="WFO_PROJECT.MainWindow"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="MainWindow" Height="800" Width="594" ToolTip="WFO Grep Tool" Icon="Icon.ico" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Top" Margin="0" Height="21">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF6F6F6" Offset="0.25"/>
                    <GradientStop Color="#FFEAE8E8" Offset="0.25"/>
                    <GradientStop Color="#FFDCD9D9" Offset="0.8"/>
                    <GradientStop Color="#FFFFFCFC" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>

            <MenuItem Header="File" Click="MenuItem_exitBtn">
                <MenuItem Header="New Window" HorizontalAlignment="Left" Width="169" Margin="0,0,-29,0"/>
                <MenuItem Header="Select Search Path" HorizontalAlignment="Left" Width="162" Margin="0,0,-22,0"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="157" Margin="0,0,-17,0"/>
                <MenuItem x:Name="exitBtn" Header="Exit" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Options" HorizontalAlignment="Left" Width="160" Click="MenuItem_Click"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="View Help" HorizontalAlignment="Left" Width="160"/>
                <Separator HorizontalAlignment="Left" Width="160"/>
                <MenuItem Header="About" HorizontalAlignment="Left" Width="160"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
        </Menu>
        <ToolBarPanel HorizontalAlignment="Left" Height="16" VerticalAlignment="Top" Width="394" Margin="0,654,0,0"/>
        <Rectangle Fill="#FFBC0000" HorizontalAlignment="Left" Margin="0,640,0,0" Stroke="Black" VerticalAlignment="Top" Height="1" Width="1"/>
        <Image HorizontalAlignment="Left" Height="36" Margin="425,49,0,0" VerticalAlignment="Top" Width="130"/>
        <TabControl Margin="1,26,-1,0">
            <TabItem Header="Log Creation">
                <Grid Background="#FFE5E5E5" Margin="0,-2,0,0">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>
                    <GroupBox x:Name="Selct_log_file_groupbox" Header="Temp select log file group" HorizontalAlignment="Left" Margin="25,26,0,0" VerticalAlignment="Top" Height="106" Width="375"/>
                    <ListView x:Name="ListView1" Margin="25,208,25,50" Loaded="ListView1_Loaded" IsEnabled="False">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="..." HorizontalAlignment="Left" Margin="138,60,0,0" VerticalAlignment="Top" Width="26" Click="Button_Click" Height="22" ToolTip="Browse for a Log file to parse" RenderTransformOrigin="7,2.091"/>
                    <Button x:Name="GrepButton" Content="Run" HorizontalAlignment="Left" Margin="25,0,0,15" VerticalAlignment="Bottom" Width="85" RenderTransformOrigin="-0.107,0.227" Click="GrepButton_Click" Height="22" ToolTip="Click to run a search"/>
                    <Label x:Name="File_Label" Content="" HorizontalAlignment="Left" Margin="180,60,0,0" VerticalAlignment="Top" Width="193" RenderTransformOrigin="0.5,0.5" Height="26">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="0.087"/>
                                <RotateTransform Angle="0.271"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>
                    <!--<Label Content="Start time" HorizontalAlignment="Left" Margin="32,137,0,0" VerticalAlignment="Top"/>
                    <Label Content="End time" HorizontalAlignment="Left" Margin="25,168,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.561,4.885"/>-->
                    <Label Content="Select file:" HorizontalAlignment="Left" Margin="43,56,0,0" VerticalAlignment="Top" Width="73"/>
                    <Button Content="..." HorizontalAlignment="Left" Margin="138,90,0,0" VerticalAlignment="Top" Width="26" Click="Button_Click_4" ToolTip="Select output folder." RenderTransformOrigin="1.231,0.273"/>
                    <Label x:Name="outputFileLabel" Content="" HorizontalAlignment="Left" Margin="180,90,0,0" VerticalAlignment="Top" Width="192" Height="26" RenderTransformOrigin="0.5,0.5">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.048"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>
                    <Label Content="Output folder:" HorizontalAlignment="Left" Margin="43,90,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.237,0.308" Width="90"/>
                    <Button x:Name="BtnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="125,0,0,15" VerticalAlignment="Bottom" Width="75"/>
                    <GroupBox x:Name="Time_picker_group" Header="Time Picker temp  group label" HorizontalAlignment="Left" Margin="25,137,0,0" VerticalAlignment="Top" Height="64" Width="375">
                        <Grid Margin="10,10,13,5">
                            <xctk:DateTimePicker x:Name="End_time" RenderTransformOrigin="3.596,8.75" Margin="240,1,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" ToolTip="Pick a end time" IsReadOnly="True"/>
                            <xctk:DateTimePicker x:Name="Start_Time_" RenderTransformOrigin="3.596,8.75" Margin="65,1,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" ToolTip="Pick a start time" IsReadOnly="True"/>
                            <Label Content="Start time:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <Label Content="End time:" HorizontalAlignment="Left" Margin="170,1,0,0" VerticalAlignment="Top"/>
                        </Grid>
                    </GroupBox>
                    <!--<xctk:DateTimePicker x:Name="Start_Time_" RenderTransformOrigin="3.596,8.75" Margin="0,0,157,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="93" ToolTip="Pick a start time"/>
                    <xctk:DateTimePicker x:Name="End_time" RenderTransformOrigin="3.596,8.75" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="93" ToolTip="Pick a end time"/>-->

                </Grid>
            </TabItem>
            <TabItem Header="Edit Script">
                <Grid Background="#FFE5E5E5" RenderTransformOrigin="0.588,0.498" Margin="0,-10,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GroupBox x:Name="Add_new_Line_Groupbox" Header="Add New Line  group" HorizontalAlignment="Left" Margin="25,240,0,0" VerticalAlignment="Top" Height="144" Width="475"/>
                    <GroupBox x:Name="Select_Script_Group_box" Header="Select Script" HorizontalAlignment="Left" Margin="25,109,0,0" VerticalAlignment="Top" Height="110" Width="302"/>
                    <DataGrid x:Name="dataGridView1" Margin="30,528,18,64" HorizontalGridLinesBrush="#FFAC0E0E" VerticalGridLinesBrush="#FF201C3C" 
                              AreRowDetailsFrozen="True" IsReadOnly="True" RenderTransformOrigin="0.5,0.5" >
                        <DataGrid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0.111"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </DataGrid.RenderTransform>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn  Width="60" Binding.XmlNamespaceManager="{Binding checkstuff}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox x:Name="stu" Checked="CheckBox_Click" IsEnabled="True"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label x:Name="ScriptNameLabel" Content="Select Script:" HorizontalAlignment="Left" Margin="30,132,0,0" VerticalAlignment="Top" Width="83" Height="26"/>
                    <ComboBox x:Name="ComboOne" Margin="118,136,0,0" VerticalAlignment="Top" Loaded="ComboBox_Loaded" SelectionChanged="ComboBox_SelectionChanged" PreviewMouseLeftButtonDown="ComboOne_PreviewMouseLeftButtonDown" Height="22" Width="120" HorizontalAlignment="Left"/>
                    <Button Content="Edit Script" HorizontalAlignment="Left" Margin="112,0,0,25" VerticalAlignment="Bottom" Width="76" Click="edit_Script"/>
                    <Button Content="Save Script" HorizontalAlignment="Left" Margin="200,0,0,25" VerticalAlignment="Bottom" Width="76" Click="save_Script" RenderTransformOrigin="0.184,0.591"/>
                    <Button Content="Copy Script" HorizontalAlignment="Left" Margin="25,0,0,25" VerticalAlignment="Bottom" Width="74" IsEnabled="False"/>
                    <Label x:Name="DeleteScriptNameLabel" Content="Delete Script" HorizontalAlignment="Left" Margin="30,163,0,0" VerticalAlignment="Top" Width="80" IsEnabled="False"/>
                    <Label x:Name="RegularExpressionLabel" Content="Regular Expression: " HorizontalAlignment="Left" Margin="30,475,0,0" VerticalAlignment="Top" Width="116" IsEnabled="False"/>
                    <TextBox x:Name="RegularExpressionbox" Height="22" Margin="146,479,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.283,0" IsReadOnly = "True" IsEnabled="False" HorizontalAlignment="Left" Width="378"/>
                    <GroupBox Header="Create Script&#xA;" HorizontalAlignment="Left" Margin="25,16,0,0" VerticalAlignment="Top" Height="80" Width="300">
                        <Button x:Name="scriptCreationButton" Content="Create Script" HorizontalAlignment="Left" Margin="187,0,0,0" VerticalAlignment="Top" Width="76" Click="Create_File" IsEnabled="False"/>
                    </GroupBox>
                    <TextBox x:Name="scriptNamebox" Height="22" Margin="42,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly = "True" IsEnabled="False" TextChanged="Script_Name_TextChanged" Width="152" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="Delete_File_ComboBox" HorizontalAlignment="Left" Margin="118,167,0,0" VerticalAlignment="Top" Width="120"/>
                    <Label Content="Add New Line :" HorizontalAlignment="Left" Margin="37,278,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.311,0.09"/>
                    <ComboBox x:Name="Add_new_Line_Combo_Box" HorizontalAlignment="Left" Margin="137,282,0,0" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>

</Window>