<Window  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Properties="clr-namespace:WFO_PROJECT.Properties" x:Name="WFO_Grep_Tool" x:Class="WFO_PROJECT.MainWindow"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="MainWindow" Height="800" Width="594" ToolTip="WFO Grep Tool" Icon="Icon.ico" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Top" Margin="0" Height="21">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF6F6F6" Offset="0.25"/>
                    <GradientStop Color="#FFEAE8E8" Offset="0.25"/>
                    <GradientStop Color="#FFDCD9D9" Offset="0.8"/>
                    <GradientStop Color="#FFFFFCFC" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>

            <MenuItem Header="File" Click="MenuItem_exitBtn">
                <MenuItem Header="New Window" HorizontalAlignment="Left" Width="169" Margin="0,0,-29,0"/>
                <MenuItem Header="Select Search Path" HorizontalAlignment="Left" Width="162" Margin="0,0,-22,0"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="157" Margin="0,0,-17,0"/>
                <MenuItem x:Name="exitBtn" Header="Exit" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Options" HorizontalAlignment="Left" Width="160" Click="MenuItem_Click"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="View Help" HorizontalAlignment="Left" Width="160"/>
                <Separator HorizontalAlignment="Left" Width="160"/>
                <MenuItem Header="About" HorizontalAlignment="Left" Width="160"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
        </Menu>
        <ToolBarPanel HorizontalAlignment="Left" Height="16" VerticalAlignment="Top" Width="394" Margin="0,654,0,0"/>
        <Rectangle Fill="#FFBC0000" HorizontalAlignment="Left" Margin="0,640,0,0" Stroke="Black" VerticalAlignment="Top" Height="1" Width="1"/>
        <Image HorizontalAlignment="Left" Height="36" Margin="425,49,0,0" VerticalAlignment="Top" Width="130"/>
        <TabControl Margin="0,21,0,5" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Log Creation" Margin="3,0,-4,-3">
                <Grid Background="#FFE5E5E5" Margin="-2,-4">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>
                    <ListView x:Name="ListView1" Margin="25,111,25,60" SelectionChanged="ListView1_SelectionChanged" Loaded="ListView1_Loaded" IsEnabled="False">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="..." HorizontalAlignment="Left" Margin="352,14,0,0" VerticalAlignment="Top" Width="30" Click="Button_Click" Height="22" ToolTip="Browse for a Log file to parse" RenderTransformOrigin="7,2.091"/>
                    <Button x:Name="GrepButton" Content="Run" HorizontalAlignment="Left" Margin="25,0,0,10" VerticalAlignment="Bottom" Width="85" RenderTransformOrigin="-0.107,0.227" Click="GrepButton_Click" Height="22" ToolTip="Click to parse a log file">
                        <Button.Background>
                            <ImageBrush/>
                        </Button.Background>
                    </Button>
                    <Label x:Name="File_Label" Content="" HorizontalAlignment="Left" Margin="120,14,0,0" VerticalAlignment="Top" Width="220" RenderTransformOrigin="0.5,0.5" Height="26">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0.311"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>
                    <!--<Label Content="Start time" HorizontalAlignment="Left" Margin="32,137,0,0" VerticalAlignment="Top"/>
                    <Label Content="End time" HorizontalAlignment="Left" Margin="25,168,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.561,4.885"/>-->
                    <xctk:DateTimePicker x:Name="End_time" RenderTransformOrigin="3.596,8.75" Margin="265,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" ToolTip="Pick a end time" IsReadOnly="True"/>
                    <xctk:DateTimePicker x:Name="Start_Time_" RenderTransformOrigin="3.596,8.75" Margin="90,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" ToolTip="Pick a start time" IsReadOnly="True"/>
                    <Label Content="Start time:" HorizontalAlignment="Left" Margin="25,79,0,0" VerticalAlignment="Top"/>
                    <Label Content="End time:" HorizontalAlignment="Left" Margin="195,80,0,0" VerticalAlignment="Top"/>
                    <Label Content="Source file:" HorizontalAlignment="Left" Margin="25,14,0,0" VerticalAlignment="Top"/>
                    <Button Content="..." HorizontalAlignment="Left" Margin="352,48,0,0" VerticalAlignment="Top" Width="30" Click="Button_Click_4" ToolTip="Select output folder."/>
                    <Label x:Name="outputFileLabel" Content="" HorizontalAlignment="Left" Margin="120,48,0,0" VerticalAlignment="Top" Width="220" Height="26"/>
                    <Label Content="Output folder:" HorizontalAlignment="Left" Margin="25,48,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.237,0.308"/>
                    <CheckBox x:Name="Checkbox_Time" Content="Enabled" HorizontalAlignment="Left" Margin="396,87,0,0" VerticalAlignment="Top"/>
                    <!--<xctk:DateTimePicker x:Name="Start_Time_" RenderTransformOrigin="3.596,8.75" Margin="0,0,157,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="93" ToolTip="Pick a start time"/>
                    <xctk:DateTimePicker x:Name="End_time" RenderTransformOrigin="3.596,8.75" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="93" ToolTip="Pick a end time"/>-->

                </Grid>
            </TabItem>
            <TabItem Header="Edit Script" Margin="5,0,-23,-3">
                <Grid Background="#FFE5E5E5" RenderTransformOrigin="0.588,0.498" Margin="-2,-4" Height="721" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="393*"/>
                        <RowDefinition Height="331*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="dataGridView1" Margin="25,190,25,42" HorizontalGridLinesBrush="#FFAC0E0E" VerticalGridLinesBrush="#FF201C3C" 
                              AreRowDetailsFrozen="True" IsReadOnly="True" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" >
                        <DataGrid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0.111"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </DataGrid.RenderTransform>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn  Width="60" Binding.XmlNamespaceManager="{Binding checkstuff}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox x:Name="stu" IsChecked="{Binding Path=IsSelected, UpdateSourceTrigger=PropertyChanged}" Checked="CheckBox_Click" IsEnabled="True"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label Content="Select Script:" HorizontalAlignment="Left" Margin="26,30,0,0" VerticalAlignment="Top" Width="378"/>
                    <ComboBox x:Name="ComboOne" Margin="142,34,0,0" VerticalAlignment="Top" Loaded="ComboBox_Loaded" SelectionChanged="ComboBox_SelectionChanged" PreviewMouseLeftButtonDown="ComboOne_PreviewMouseLeftButtonDown" Height="22" Width="378" HorizontalAlignment="Left"/>
                    <Button Content="Edit Script" HorizontalAlignment="Left" Margin="112,0,0,10" VerticalAlignment="Bottom" Width="76" Click="edit_Script" Grid.Row="1"/>
                    <Button Content="Save Script" HorizontalAlignment="Left" Margin="200,0,0,10" VerticalAlignment="Bottom" Width="76" Click="save_Script" Grid.Row="1" RenderTransformOrigin="0.184,0.591"/>
                    <Button Content="Copy Script" HorizontalAlignment="Left" Margin="25,0,0,10" VerticalAlignment="Bottom" Width="74" Grid.Row="1" IsEnabled="False"/>
                    <Label x:Name="ScriptNameLabel" Content="Script Name: " HorizontalAlignment="Left" Margin="25,65,0,0" VerticalAlignment="Top" Width="80" IsEnabled="False"/>
                    <Label x:Name="RegularExpressionLabel" Content="Regular Expression: " HorizontalAlignment="Left" Margin="21,111,0,0" VerticalAlignment="Top" Width="116" IsEnabled="False"/>
                    <TextBox x:Name="scriptNamebox" Height="22" Margin="142,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly = "True" IsEnabled="False" TextChanged="Script_Name_TextChanged" Width="378" HorizontalAlignment="Left"/>
                    <TextBox x:Name="RegularExpressionbox" Height="22" Margin="142,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.283,0" IsReadOnly = "True" IsEnabled="False" HorizontalAlignment="Left" Width="378"/>
                    <Button x:Name="scriptCreationButton" Content="Create Script" HorizontalAlignment="Left" Margin="25,153,0,0" VerticalAlignment="Top" Width="76" Click="Create_File" IsEnabled="False"/>
                </Grid>
            </TabItem>
            <TabItem Margin="24,0,-82,-3" HorizontalAlignment="Left" Width="116" Content="" Header="new page"></TabItem>
            <TabControl Height="100" Width="100">                             
            </TabControl>
        </TabControl>

    </Grid>

</Window>