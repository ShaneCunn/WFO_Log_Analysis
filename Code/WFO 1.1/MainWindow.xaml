<Window  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:Properties="clr-namespace:WFO_PROJECT.Properties"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Name="WFO_Grep_Tool" x:Class="WFO_PROJECT.MainWindow"
                Title="ACR logging tool" Height="700" Width="900" Icon="Icon.ico" >
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF295D73" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Top" Margin="0" Height="21">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF6F6F6" Offset="0.25"/>
                    <GradientStop Color="#FFEAE8E8" Offset="0.25"/>
                    <GradientStop Color="#FFDCD9D9" Offset="0.8"/>
                    <GradientStop Color="#FFFFFCFC" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>

            <MenuItem x:Name="Btn_file_tab" Header="File&#xA;" Click="MenuItem_exitBtn">
                <MenuItem x:Name="Btn_New_Window" Header="New Window" HorizontalAlignment="Left" Width="169" Margin="0,0,-29,0" ToolTip="Open a new window"/>
                <MenuItem Header="Select Search Path" HorizontalAlignment="Left" Width="162" Margin="0,0,-22,0"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="157" Margin="0,0,-17,0"/>
                <MenuItem x:Name="exitBtn" Header="Exit" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Options" HorizontalAlignment="Left" Width="160" Click="MenuItem_Click"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="View Help" HorizontalAlignment="Left" Width="160"/>
                <Separator HorizontalAlignment="Left" Width="160"/>
                <MenuItem Header="About" HorizontalAlignment="Left" Width="160"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
        </Menu>
        <Rectangle HorizontalAlignment="Left" Margin="0,640,0,0" Stroke="red" VerticalAlignment="Top" Height="1" Width="1" Fill="#FFBC0000"/>
        <TabControl Margin="0,21,0,0" Background="#FFDEE7EF">
            <TabItem Header="Home"  Margin="3,-2,-2,-1">
                <Grid Background="#FFDEE7EF" Margin="0,-1.965,0,-2.551">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="517*"/>
                        <ColumnDefinition Width="365*"/>

                    </Grid.ColumnDefinitions>
                    <Border x:Name="Border_Right" BorderBrush="#FF4A494A" BorderThickness="2" Margin="300,10,20,12" Grid.ColumnSpan="2"/>
                    <Border x:Name="border_left" BorderBrush="Black" BorderThickness="2" Margin="10,10,0,10" Width="272" HorizontalAlignment="Left">
                        <Label Content="Select a Log File to Parse:" Margin="0,0,-2,0" VerticalAlignment="Top" Height="26" Background="#FF4A494A" Foreground="WhiteSmoke" FontWeight="Bold"/>
                    </Border>
                    <ListView x:Name="ListView1" Margin="20,233,0,68" Loaded="ListView1_Loaded" HorizontalAlignment="Left" Width="253" SelectionChanged="ListView1_SelectionChanged" BorderBrush="#FF72757B" Foreground="#FF713104" VerticalContentAlignment="Top"  ItemContainerStyle="{StaticResource alternatingStyle}" AlternationCount="2" BorderThickness="1" Background="{x:Null}" >

                        <ListView.View>
                            <GridView>

                                <GridViewColumn Header="Select Script to parse with:"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="GrepButton" Content="Run" HorizontalAlignment="Left" Margin="27,0,0,30.627" VerticalAlignment="Bottom" Width="50" RenderTransformOrigin="0,0.5" Click="GrepButton_Click" ToolTip="Click to run a search on a log file" Height="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Cursor="Hand" IsEnabled="False" Background="{x:Null}"/>
                    <!--<Label Content="Start time" HorizontalAlignment="Left" Margin="32,137,0,0" VerticalAlignment="Top"/>
                    <Label Content="End time" HorizontalAlignment="Left" Margin="25,168,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.561,4.885"/>-->
                    <Button Content="Choose Output" HorizontalAlignment="Left" Margin="27,192,0,0" VerticalAlignment="Top" Width="96" Click="Button_Click_4" ToolTip="Choose output folder." RenderTransformOrigin="1.231,0.273" Height="22" Cursor="Hand"/>
                    <Label x:Name="outputFileLabel" Content="" HorizontalAlignment="Left" Margin="27,158,0,0" VerticalAlignment="Top" Width="240" RenderTransformOrigin="0.5,0.5" BorderThickness="1" BorderBrush="#FFE3E9EF" Foreground="Black" Background="White" ToolTip="Please click the Choose Output button.">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="0.024"/>
                                <RotateTransform Angle="-0.038"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>
                    <Label Content="Source Log file:&#xA;" HorizontalAlignment="Left" Margin="27,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.237,0.308" Width="96" Height="26"/>
                    <Button x:Name="BtnCancel" Content="Stop" HorizontalAlignment="Left" Margin="105,0,0,30.627" VerticalAlignment="Bottom" Width="60" IsCancel="True" IsEnabled="False" Height="22" RenderTransformOrigin="-0.16,0.412" Background="{x:Null}"/>

                    <GroupBox x:Name="Time_picker_group" Header="Pick time ranges *Optional" HorizontalAlignment="Left" Margin="15,233,0,0" VerticalAlignment="Top" Height="98" Width="267" d:IsHidden="True" Visibility="Hidden">


                        <Grid Margin="10,10,13,5">
                            <xctk:DateTimePicker x:Name="End_time" RenderTransformOrigin="3.596,8.75" Margin="58,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" ToolTip="Pick a end time" IsReadOnly="True"/>
                            <xctk:DateTimePicker x:Name="Start_Time_" RenderTransformOrigin="3.596,8.75" Margin="58,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" ToolTip="Pick a start time" IsReadOnly="True"/>
                            <Label Content="Start time:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-7,-1,0,0"/>
                            <Label Content="End time:" HorizontalAlignment="Left" Margin="-7,30,0,0" VerticalAlignment="Top"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="Add_new_Line_Groupbox" Header="Edit or Add New Line" Margin="305,0,33,28" VerticalAlignment="Bottom" Height="231" Grid.ColumnSpan="2">
                        <ComboBox x:Name="ComboOne" Margin="10,10,0,0" VerticalAlignment="Top" Loaded="ComboBox_Loaded" SelectionChanged="ComboBox_SelectionChanged" PreviewMouseLeftButtonDown="ComboOne_PreviewMouseLeftButtonDown" Height="22" Width="120" HorizontalAlignment="Left" ToolTip="Select script to edit"/>

                    </GroupBox>
                    <Button Content="Save Script" HorizontalAlignment="Left" Margin="305.418,0,0,14.657" VerticalAlignment="Bottom" Width="76" Click="save_Script" RenderTransformOrigin="0.184,0.591" Height="22" d:IsHidden="True" Visibility="Hidden"/>
                    <Button Content="Copy Script" HorizontalAlignment="Left" Margin="395.418,0,0,14.657" VerticalAlignment="Bottom" Width="76" IsEnabled="False" RenderTransformOrigin="-0.078,0.649" Height="22" d:IsHidden="True" Visibility="Hidden"/>

                    <GroupBox Header="Create Script&#xA;" Margin="303,0,272,285" VerticalAlignment="Bottom" Height="71" Grid.ColumnSpan="2"/>

                    <TextBox x:Name="scriptNamebox" Margin="335,0,30,300" TextWrapping="Wrap" VerticalAlignment="Bottom" TextChanged="Script_Name_TextChanged" Height="23" Width="152"/>

                    <TextBox x:Name="Add_New_Line_Textbox__2" HorizontalAlignment="Left" Height="23" Margin="182.198,0,0,142" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="139.234" RenderTransformOrigin="0.443,0.217" Grid.Column="1"/>
                    <TextBox x:Name="Add_New_Line_Textbox__3" HorizontalAlignment="Left" Margin="182.198,0,0,68" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="139.234" Grid.Column="1"/>
                    <TextBox x:Name="Add_New_Line_Textbox_1" HorizontalAlignment="Left" Margin="321,0,0,118" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="279" Loaded="Add_New_Line_Textbox_1_Loaded" Height="60" Grid.ColumnSpan="2"/>
                    <Label Content="Current Lines in Script" Margin="301,10,20,0" VerticalAlignment="Top" Height="26" Grid.ColumnSpan="2" Background="#FF4A494A" Foreground="WhiteSmoke" FontWeight="Bold"/>

                    <Button Content="Choose File" HorizontalAlignment="Left" Margin="27,100,0,0" VerticalAlignment="Top" Width="92" Click="Button_Click" Height="22" ToolTip="Select Log file to parse" RenderTransformOrigin="7,2.091" Cursor="Hand"/>
                    <Label x:Name="File_Label" Content="" HorizontalAlignment="Left" Margin="27,68,0,0" VerticalAlignment="Top" Width="240" RenderTransformOrigin="0.5,0.5" BorderThickness="1" BorderBrush="#FFE3E9EF" Foreground="Black" Background="White" IsEnabled="False" ToolTip="Please click the Choose Log fi button.">



                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="0.42"/>
                                <RotateTransform Angle="0.166"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>
                    <Label Content="Output Folder Location:" HorizontalAlignment="Left" Margin="27,130,0,0" VerticalAlignment="Top" Width="165"/>


                    <Label Content="Main String:" HorizontalAlignment="Left" Margin="321,0,0,178" VerticalAlignment="Bottom" RenderTransformOrigin="0.519,0.445" Width="90" Height="28"/>
                    <Label Content="Top Marker:" HorizontalAlignment="Left" Margin="182.198,0,0,167.04" VerticalAlignment="Bottom" Width="96" RenderTransformOrigin="0.538,1.083" Grid.Column="1"/>
                    <DataGrid x:Name="DataGrid1" Margin="301,36,23,371" SelectionChanged="DataGrid1_SelectionChanged" IsReadOnly="True" Grid.ColumnSpan="2" Background="#FFF0F0F0" BorderThickness="2" AlternationCount="2" RowBackground="#FFF7F7FF" AlternatingRowBackground="White"/>
                    <Label Content="Bottom Marker:" HorizontalAlignment="Left" Margin="182.198,0,0,95" VerticalAlignment="Bottom" Width="96" RenderTransformOrigin="0.5,2.308" Grid.Column="1"/>


                    <Button x:Name="deleteScriptsButton" Content="Delete Script" HorizontalAlignment="Left" Margin="190.399,0,0,30.627" VerticalAlignment="Bottom" Width="75" Click="deleteScriptsButton_Click" Height="23" ToolTip="Tick the tick box beside the Script you want Deleted" IsEnabled="False"/>
                    <Button x:Name="deleteLineButton" Content="Delete Line" Margin="504,0,0,48" Click="deleteLineButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="96" Height="23" ToolTip="Select the line you want Deleted" Grid.ColumnSpan="2"/>
                    <Button x:Name="btn_Save_New_Line" Content="Save Line" HorizontalAlignment="Left" Margin="375,0,0,48" VerticalAlignment="Bottom" Width="96" RenderTransformOrigin="0.583,2.615" Height="23" Click="btn_Save_New_Line_Click_1" Cursor="Hand" ToolTip="Click Save to save changes to the script"/>
                    <TextBox x:Name="editScriptNameTextbox" HorizontalAlignment="Left" Height="22" Margin="491,0,0,212" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="333" Grid.ColumnSpan="2"/>
                    <Button x:Name="scriptCreationButton" Content="Create Script" Margin="504,0,287,300" VerticalAlignment="Bottom" Click="Create_File" ToolTip="Create Script" Height="23" IsEnabled="False" Width="91" Grid.ColumnSpan="2"/>

                    <!--<xctk:DateTimePicker x:Name="Start_Time_" RenderTransformOrigin="3.596,8.75" Margin="0,0,157,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="93" ToolTip="Pick a start time"/>
                    <xctk:DateTimePicker x:Name="End_time" RenderTransformOrigin="3.596,8.75" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="93" ToolTip="Pick a end time"/>-->

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>

</Window>

