<Window  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Properties="clr-namespace:WFO_PROJECT.Properties" x:Name="WFO_Grep_Tool" x:Class="WFO_PROJECT.MainWindow"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="MainWindow" Height="800" Width="948.125" Icon="Icon.ico" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Top" Margin="0" Height="21">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF6F6F6" Offset="0.25"/>
                    <GradientStop Color="#FFEAE8E8" Offset="0.25"/>
                    <GradientStop Color="#FFDCD9D9" Offset="0.8"/>
                    <GradientStop Color="#FFFFFCFC" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>



            <!--<MenuItem x:Name="Btn_file_tab" Header="File&#xD;&#xA;" Click="MenuItem_exitBtn">
                <MenuItem x:Name="Btn_New_Window" Header="New Window" HorizontalAlignment="Left" Width="169" Margin="0,0,-29,0" ToolTip="Open a new window"/>
                <MenuItem Header="Select Search Path" HorizontalAlignment="Left" Width="162" Margin="0,0,-22,0"/>
                <MenuItem Header="Spare_MenuItem" HorizontalAlignment="Left" Width="157" Margin="0,0,-17,0"/>
                <MenuItem x:Name="exitBtn" Header="Exit" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>-->
            <MenuItem Header="File" Click="File_Menu_click" RenderTransformOrigin="-4.281,0.649">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="185"/>
              <Separator HorizontalAlignment="Left" Height="100" Width="185"/>
                <MenuItem Header="Btn_Exit" HorizontalAlignment="Left" Width="185"/>
            </MenuItem>



            <!--<MenuItem x:Name="Btn_file_tab" Header="File&#xD;&#xA;" Click="MenuItem_exitBtn">
                <MenuItem x:Name="Btn_New_Window" Header="New Window" HorizontalAlignment="Left" Width="169" Margin="0,0,-29,0" ToolTip="Open a new window"/>
                <MenuItem Header="Select Search Path" HorizontalAlignment="Left" Width="162" Margin="0,0,-22,0"/>
                <MenuItem Header="Spare_MenuItem" HorizontalAlignment="Left" Width="157" Margin="0,0,-17,0"/>
                <MenuItem x:Name="exitBtn" Header="Exit" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>-->
            <MenuItem Header="Edit">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Options" HorizontalAlignment="Left" Width="160" Click="MenuItem_Click"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="View Help" HorizontalAlignment="Left" Width="160"/>
                <Separator HorizontalAlignment="Left" Width="160"/>
                <MenuItem Header="About" HorizontalAlignment="Left" Width="160"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="160"/>
            </MenuItem>
        </Menu>
        <ToolBarPanel HorizontalAlignment="Left" Height="16" VerticalAlignment="Top" Width="394" Margin="0,654,0,0"/>
        <Rectangle Fill="#FFBC0000" HorizontalAlignment="Left" Margin="0,640,0,0" Stroke="Black" VerticalAlignment="Top" Height="1" Width="1"/>
        <Image HorizontalAlignment="Left" Height="36" Margin="425,49,0,0" VerticalAlignment="Top" Width="130"/>
        <TabControl Margin="1,26,-1,0">
            <TabItem Header="Log Creation" ToolTip="Select a log to parse">
                <Grid Background="#FFE5E5E5" Margin="0,-2,0,0">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>
                    <GroupBox x:Name="Selct_log_file_groupbox" Header="Temp select log file group" HorizontalAlignment="Left" Margin="25,26,0,0" VerticalAlignment="Top" Height="106" Width="270"/>
                    <ListView x:Name="ListView1" Margin="25,244,0,50" Loaded="ListView1_Loaded" IsEnabled="False" HorizontalAlignment="Left" Width="270" SelectionChanged="ListView1_SelectionChanged_1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="Browse" HorizontalAlignment="Left" Margin="138,60,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click" Height="22" ToolTip="Browse for a Log file to parse" RenderTransformOrigin="7,2.091"/>
                    <Button x:Name="GrepButton" Content="Run" HorizontalAlignment="Left" Margin="25,0,0,15" VerticalAlignment="Bottom" Width="85" RenderTransformOrigin="-0.107,0.227" Click="GrepButton_Click" Height="22" ToolTip="Click to run a search"/>
                    <Label x:Name="File_Label" Content="" HorizontalAlignment="Left" Margin="206,63,0,0" VerticalAlignment="Top" Width="84" RenderTransformOrigin="0.5,0.5" Height="26">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="0.087"/>
                                <RotateTransform Angle="0.271"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>
                    <!--<Label Content="Start time" HorizontalAlignment="Left" Margin="32,137,0,0" VerticalAlignment="Top"/>
                    <Label Content="End time" HorizontalAlignment="Left" Margin="25,168,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.561,4.885"/>-->
                    <Label Content="Select file:" HorizontalAlignment="Left" Margin="43,56,0,0" VerticalAlignment="Top" Width="73"/>
                    <Button Content="Browse" HorizontalAlignment="Left" Margin="138,90,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click_4" ToolTip="Select output folder." RenderTransformOrigin="1.231,0.273"/>
                    <Label x:Name="outputFileLabel" Content="" HorizontalAlignment="Left" Margin="208,90,0,0" VerticalAlignment="Top" Width="79" Height="26" RenderTransformOrigin="0.5,0.5">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.048"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Label.RenderTransform>
                    </Label>
                    <Label Content="Output folder:" HorizontalAlignment="Left" Margin="43,90,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.237,0.308" Width="90"/>
                    <Button x:Name="BtnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="125,0,0,15" VerticalAlignment="Bottom" Width="75" Click="BtnCancel_Click"/>
                    <GroupBox x:Name="Time_picker_group" Header="Time Picker temp  group label" HorizontalAlignment="Left" Margin="25,132,0,0" VerticalAlignment="Top" Height="98" Width="270">
                        <Grid Margin="10,10,13,5">
                            <xctk:DateTimePicker x:Name="End_time" RenderTransformOrigin="3.596,8.75" Margin="65,31,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" ToolTip="Pick a end time" IsReadOnly="True"/>
                            <xctk:DateTimePicker x:Name="Start_Time_" RenderTransformOrigin="3.596,8.75" Margin="65,1,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" ToolTip="Pick a start time" IsReadOnly="True"/>
                            <Label Content="Start time:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <Label Content="End time:" HorizontalAlignment="Left" Margin="0,31,0,0" VerticalAlignment="Top"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Copy" HorizontalAlignment="Left" Margin="325,0,0,13" VerticalAlignment="Bottom" Width="591" Height="63">
                        <ComboBox x:Name="ComboOne_Copy" Margin="168,10,0,0" VerticalAlignment="Top" Loaded="ComboBox_Loaded" SelectionChanged="ComboBox_SelectionChanged" PreviewMouseLeftButtonDown="ComboOne_PreviewMouseLeftButtonDown" Height="22" Width="120" HorizontalAlignment="Left" ToolTip="Select script to edit"/>
                    </GroupBox>
                    <GroupBox x:Name="Add_new_Line_Groupbox" Header="Add New Line  group" HorizontalAlignment="Left" Margin="320,97,0,0" VerticalAlignment="Top" Height="216" Width="604">
                        <Button x:Name="btn_Save_New_Line" Content="Save" HorizontalAlignment="Left" Margin="10,157,0,0" VerticalAlignment="Top" Width="96" RenderTransformOrigin="0.583,2.615" Click="btn_Save_New_Line_Click"/>
                    </GroupBox>
                    <DataGrid x:Name="dataGridView1" Margin="320,330,12,123" HorizontalGridLinesBrush="#FFAC0E0E" VerticalGridLinesBrush="#FF201C3C" 
                    	AreRowDetailsFrozen="True" IsReadOnly="True" RenderTransformOrigin="0.5,0.5" SelectionChanged="dataGridView1_SelectionChanged" >
                        <DataGrid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0.111"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </DataGrid.RenderTransform>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn  Width="60" Binding.XmlNamespaceManager="{Binding checkstuff}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox x:Name="null" Checked="CheckBox_Click" IsEnabled="True"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Save Script" HorizontalAlignment="Left" Margin="411,0,0,90" VerticalAlignment="Bottom" Width="76" Click="save_Script" RenderTransformOrigin="0.184,0.591"/>
                    <Button Content="Copy Script" HorizontalAlignment="Left" Margin="326,0,0,90" VerticalAlignment="Bottom" Width="76" IsEnabled="False" RenderTransformOrigin="-0.078,0.649"/>
                    <Label x:Name="RegularExpressionLabel" Content="Regular Expression: " HorizontalAlignment="Left" Margin="337,240,0,0" VerticalAlignment="Top" Width="116" IsEnabled="False" RenderTransformOrigin="0.5,1.423"/>
                    <TextBox x:Name="RegularExpressionbox" Height="22" Margin="483,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.283,0" IsReadOnly = "True" IsEnabled="False" HorizontalAlignment="Left" Width="229"/>
                    <GroupBox Header="Create Script&#xA;" HorizontalAlignment="Left" Margin="320,13,0,0" VerticalAlignment="Top" Height="75" Width="604">
                        <Button x:Name="scriptCreationButton" Content="Create Script" HorizontalAlignment="Left" Margin="187,0,0,0" VerticalAlignment="Top" Width="76" Click="Create_File" IsEnabled="False" ToolTip="Save Script"/>
                    </GroupBox>
                    <TextBox x:Name="scriptNamebox" Height="22" Margin="333,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly = "True" IsEnabled="False" TextChanged="Script_Name_TextChanged" Width="152" HorizontalAlignment="Left"/>
                    <Label Content="Add new line to script:" HorizontalAlignment="Left" Margin="337,204,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.311,0.09" Width="136"/>
                    <ComboBox x:Name="Add_new_Line_Combo_Box" HorizontalAlignment="Left" Margin="483,208,0,0" VerticalAlignment="Top" Width="120" ToolTip="Add a line to script"/>
                    <TextBox x:Name="Add_New_Line_Textbox__2" HorizontalAlignment="Left" Height="23" Margin="408,169,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.443,0.217"/>
                    <TextBox x:Name="Add_New_Line_Textbox__4" HorizontalAlignment="Left" Height="23" Margin="558,169,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="70"/>
                    <TextBox x:Name="Add_New_Line_Textbox__3" HorizontalAlignment="Left" Height="23" Margin="483,169,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="70"/>
                    <TextBox x:Name="Add_New_Line_Textbox__5" HorizontalAlignment="Left" Height="23" Margin="633,169,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="70" TextChanged="TextBox_TextChanged"/>
                    <TextBox x:Name="Add_New_Line_Textbox_1" HorizontalAlignment="Left" Height="23" Margin="333,169,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="70"/>
                    <Button x:Name="Btn_Save_to_Script" Content="Save to clipboard" HorizontalAlignment="Left" Margin="687,0,0,28" VerticalAlignment="Bottom" Width="127" Click="Btn_Save_to_Script_Click"/>
                    <Label x:Name="Select_format_Label" Content="Select script format:" HorizontalAlignment="Left" Margin="337,128,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.496,-0.038"/>
                    <ComboBox x:Name="Select_foramt_ComboBox" HorizontalAlignment="Left" Margin="483,132,0,0" VerticalAlignment="Top" Width="120" ToolTip="Select format of script"/>
                    <Label Content="Select script to paste:" HorizontalAlignment="Left" Margin="343,0,0,28" VerticalAlignment="Bottom" RenderTransformOrigin="0.478,0.769" Height="26" Width="144"/>
                    <ComboBox x:Name="ComboOne" Margin="619,45,0,0" VerticalAlignment="Top" Loaded="ComboBox_Loaded" SelectionChanged="ComboBox_SelectionChanged" PreviewMouseLeftButtonDown="ComboOne_PreviewMouseLeftButtonDown" Height="22" Width="120" HorizontalAlignment="Left" ToolTip="Select script to edit"/>
                    <Button x:Name="Btn_Delete_Script" Content="Delete Script" HorizontalAlignment="Left" Margin="220,0,0,15" VerticalAlignment="Bottom" Width="75" Click="Btn_Delete_Script_Click"/>
                    <!--<xctk:DateTimePicker x:Name="Start_Time_" RenderTransformOrigin="3.596,8.75" Margin="0,0,157,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="93" ToolTip="Pick a start time"/>
                    <xctk:DateTimePicker x:Name="End_time" RenderTransformOrigin="3.596,8.75" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="93" ToolTip="Pick a end time"/>-->

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>

</Window>